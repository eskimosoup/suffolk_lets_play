<%= form_for([:admin, @competition]) do |f| %>

  <%= f.error_messages %>

  <%= field_set_tag 'Basic Information' do -%>
    
    <div class="field">
      <%= f.label :campaign_id %><br />
      <%= f.select(:campaign_id, options_for_select(Campaign.all.collect{|x| [x.name, x.id]}, :selected => f.object.campaign_id), :prompt => "Please select a campaign...") %>
    </div>
    
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
    
    <div class="field">
      <%= f.label :message %><br />
      <%= f.text_area :message, :class => "tinymce" %>
    </div>
    
    <div class="field">
      <%= f.label :prize_name %><br />
      <%= f.text_field :prize_name %>
    </div>
    
    <div class="field">
      <%= f.label :prize_description %><br />
      <%= f.text_area :prize_description, :class => "tinymce" %>
    </div>
    
    <div class="field">
      <%= f.label :prize_image %><br />
      <%= f.image_field :prize_image %>
    </div>
    
    <div class="field">
      <%= f.label :question %><br />
      <%= f.text_field :question %>
    </div>
    
    <div class="field">
      <%= f.label :start_date %><br />
      <%= f.datetime_select :start_date %>
    </div>
    
    <div class="field">
      <%= f.label :end_date %><br />
      <%= f.datetime_select :end_date %>
    </div>
    
  <% end -%>
  
  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>					
