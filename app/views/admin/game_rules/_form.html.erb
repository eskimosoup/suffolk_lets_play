<%= form_for([:admin, @game_rule]) do |f| %>

  <%= f.error_messages %>

  <%= field_set_tag 'Basic Information' do -%>
    
    <div class="field">
      <%= f.select :game, options_for_select(GameRule::GAMES, :selected => f.object.game) %>
    </div>
    
    <div class="field">
      <%= f.label :rules %><br />
      <%= f.text_area :rules, :class => 'tinymce' %>
    </div>
    
    <div class="field">
      <%= f.label :fact, "Default fact for this game" %><br />
      <%= f.text_field :fact %>
    </div>
    
  <% end -%>
  
  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>					
